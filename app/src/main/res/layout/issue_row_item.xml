<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="5dp"
    android:background="#fff"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@drawable/form_rectangle"
        android:orientation="vertical">


        <TextView
            android:id="@+id/issueid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IDENTIFIANT" />
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
             <TextView
                 android:id="@+id/test"
                 android:layout_width="30dp"
                 android:layout_height="match_parent"
                 android:text="Prio:"
                 android:textStyle="bold" />
             <TextView
                 android:id="@+id/priorite_label"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:textStyle="bold"
                 android:background="#B62C48"
                 android:textColor="#fff" />


         </LinearLayout>


        <TextView
            android:id="@+id/status"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:background="@drawable/form_rectangle"
        android:orientation="vertical">

        <TextView
            android:id="@+id/project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/project_name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Summary" />

        <TextView
            android:id="@+id/date_maj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_maj"
            android:textColor="#316BB7"
            tools:text="@tools:sample/date/ddmmyy" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >

            <Button
                android:id="@+id/addnote"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_action_add"
                android:text="Note" />

            <Button
                android:id="@+id/description_issue"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_action_details"
                android:text="Details"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>